#!/bin/bash
set -e

# History file
HISTFILE=~/.histfile

touch $HISTFILE
chmod u+rw $HISTFILE

# ZGEN
ZGENDIR=~/.zgenom
ZGENREPO="https://github.com/jandamm/zgenom.git"

if [ ! -d $ZGENDIR ]; then
	git clone "$ZGENREPO" "$ZGENDIR"
fi

# .zshrc
rsync -rtuv .zshrc ~/.zshrc
rsync -rtuv ~/.zshrc .zshrc

# .p10k.zsh
rsync -rtuv .p10k.zsh ~/.p10k.zsh
rsync -rtuv ~/.p10k.zsh .p10k.zsh